<%- include('../views/partials/header.ejs'); %>
<body>
  <%- include('../views/partials/navbar.ejs'); %>
  <div class="container">
    <br />
    <h1 class="text-center my-2">Perguntas e Respostas</h1>
    <hr />
    <a href="/perguntar" class="btn btn-secondary w-100">Perguntar</a>
    <hr />

    <% perguntas.forEach(pergunta => {%>
    <br />
    <div class="card">
      <div class="card-body">
        <h3><%= pergunta.title %></h3>
      </div>
      <div class="card-footer">
        <button
          class="btn btn-primary w-100"
          onclick="location.href='/pergunta/<%= pergunta.id %>'"
        >
          Responder
        </button>
      </div>
    </div>
    <% });%>
  </div>
</body>
<%- include('../views/partials/footer.ejs'); %>
